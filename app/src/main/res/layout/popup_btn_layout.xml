<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="16dp">

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:background="@drawable/vk_popup_btn_background"
        android:drawableStart="@drawable/visible_btn_icon"
        android:drawableEnd="@drawable/arrow_down_icon"
        android:drawablePadding="7.75dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/visible_to_all"
        android:textColor="@color/colorLightText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>